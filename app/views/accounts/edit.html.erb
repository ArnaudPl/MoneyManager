<h2><strong><%= t('.title-part-one') %>: </strong><%= @account.name %></h2>

<%= simple_form_for @account do |f| %>

  <div class="row">
    <%= f.input :name, :autofocus => true, wrapper_html: {class: 's12 m6 offset-m3 l4 offset-l4'} %>
  </div>

  <div class="row center">
    <%= f.button :submit, value: t('.update'), data: { disable_with: t('.updating')+"..." } %>
    <%= link_to t('.delete').html_safe + ' <i class="material-icons right white-text">delete</i>'.html_safe, account_path(@account), method: :delete, data: { confirm: @confirmText }, class: "btn" %>
  </div>

<% end %>
