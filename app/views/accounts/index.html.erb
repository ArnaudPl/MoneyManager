<h2><%= t('.title') %></h2>

<div class="row">
  <!-- Card to add a new account -->
  <div class="col s12 m6 l4">
    <div class="card hoverable grey lighten-3 black-text">
      <div class="card-content">
        <span class="card-title"><%= t('.new-account') %></span>
        <p><strong><%= t('.balance') %> : </strong><%= number_to_currency(0) %></p>
      </div>
      <div class="card-action center">
        <%= link_to t('.add-account'), new_account_path, class: "waves-effect btn" %>
      </div>
    </div>
  </div>
  <!-- Display all the accounts created -->
  <% @accounts.each do |account| %>
  <div class="col s12 m6 l4">
    <div class="card hoverable">
      <div class="card-content">
        <span class="card-title"><%= account.name %></span>
        <a href="<%= edit_account_url(account) %>" class="waves-effect waves-light btn-flat right account-edit tooltipped black-text" data-tooltip="<%= @editTooltip %>"><i class="material-icons">edit</i></a>
        <p><strong><%= t('.balance') %> : </strong> <%= calculateAccountCurrentBalance(account.id) %></p>
      </div>
      <div class="card-action">
        <a href="<%= new_account_transaction_path(account) %>?isWithdraw=false" class="waves-effect waves-light btn account-add tooltipped light-green" data-tooltip="<%= @addTooltip %>" ><i class="material-icons">add</i></a>
        <a href="<%= new_account_transaction_path(account) %>?isWithdraw=true" class="waves-effect waves-light btn account-remove tooltipped" data-tooltip="<%= @removeTooltip %>"><i class="material-icons">remove</i></a>
        <a href="<%= account_url(account) %>" class="waves-effect btn-flat black-text right" style="margin-right: 0;"><%= t('.show') %></a>
      </div>
    </div>
  </div>
  <% end %>
</div>
