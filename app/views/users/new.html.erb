<h2><%= t('.title') %></h2>

<%= simple_form_for @user do |f| %>

  <div class="row">
    <%= f.input :firstname, label: @firstnameLabel, wrapper_html: {class: 's12 m4 offset-m2'} %>
    <%= f.input :name, label: @nameLabel, wrapper_html: {class: 's12 m4'} %>
    <%= f.input :username, label: @usernameLabel, wrapper_html: {class: 's12 m6 offset-m3'} %>
    <%= f.input :password_digest, label: @passwordLabel, wrapper_html: {class: 's12 m6 offset-m3'} %>
  </div>

  <div class="row center">
    <%= f.button :submit, value: t('.signup'), data: { disable_with: t('.signing-up')+"..." } %>
  </div>

<% end %>
